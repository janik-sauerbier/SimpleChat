<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageButton
        android:text="Facebook"
        android:layout_height="32dp"
        android:id="@+id/facebook_signin_btn"

        android:background="@drawable/facebook"
        android:scaleType="fitXY"
        android:layout_width="32dp"
        android:layout_alignTop="@+id/twitter_sign_in_btn"
        android:layout_toLeftOf="@+id/google_sign_in_btn"
        android:layout_toStartOf="@+id/google_sign_in_btn"
        android:layout_marginRight="48dp" />

    <ImageButton
        android:text="Twitter"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/twitter_sign_in_btn"
        android:background="@drawable/twitter"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/google_sign_in_btn"
        android:layout_toRightOf="@+id/google_sign_in_btn"
        android:layout_toEndOf="@+id/google_sign_in_btn"
        android:layout_marginLeft="48dp" />

    <ImageButton
        android:text="Google"
        android:layout_width="32dp"
        android:id="@+id/google_sign_in_btn"
        android:onClick="onClick"
        android:scaleType="fitXY"
        android:elevation="0dp"
        android:background="@drawable/google"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <Button
        android:text="Skip(test)"
        android:onClick="onClick"
        android:id="@+id/skip_btn"
        android:elevation="8dp"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/facebook_signin_btn"
        android:layout_toStartOf="@+id/facebook_signin_btn"
        android:layout_alignBottom="@+id/facebook_signin_btn" />

    <Space
        android:layout_width="wrap_content"
        android:layout_below="@+id/google_sign_in_btn"
        android:layout_centerHorizontal="true"
        android:layout_height="25dp" />

</RelativeLayout>