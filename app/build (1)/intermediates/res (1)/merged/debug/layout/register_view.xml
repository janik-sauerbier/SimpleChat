<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/sign_in_btn"
        app:cardElevation="0dp"
        android:layout_alignLeft="@+id/email_tv"
        android:layout_alignStart="@+id/email_tv"
        android:layout_alignRight="@+id/email_tv"
        android:layout_alignEnd="@+id/email_tv"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="-10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:text="Email :"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/email_tv"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/reg_email_et"
        android:layout_alignStart="@+id/reg_email_et"
        android:layout_alignRight="@+id/reg_password_et"
        android:layout_alignEnd="@+id/reg_password_et"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Passwort :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_tv"
        android:layout_below="@+id/reg_email_et"
        android:layout_alignLeft="@+id/reg_password_et"
        android:layout_alignStart="@+id/reg_password_et"
        android:layout_toStartOf="@+id/sign_in_btn"
        android:layout_alignRight="@+id/reg_password_et"
        android:layout_alignEnd="@+id/reg_password_et"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/reg_email_et"
        android:layout_below="@+id/email_tv"
        android:layout_alignLeft="@+id/password_tv"
        android:layout_alignStart="@+id/password_tv"
        android:layout_alignRight="@+id/reg_password_et"
        android:layout_alignEnd="@+id/reg_password_et" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/reg_password_et"
        android:layout_below="@+id/password_tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp" />

    <TextView
        android:text="Passwort erneut eingeben:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/reg_password_et"
        android:layout_alignLeft="@+id/reg_password_et"
        android:layout_alignStart="@+id/reg_password_et"
        android:layout_alignRight="@+id/reg_password_et"
        android:layout_alignEnd="@+id/reg_password_et"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:id="@+id/reg_password2_et" />

    <Button
        android:text="Registrieren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign_in_btn"
        android:onClick="onClick"
        android:layout_below="@+id/reg_password2_et"
        android:layout_alignRight="@+id/reg_password2_et"
        android:layout_alignEnd="@+id/reg_password2_et" />

    <Button
        android:text="zurÃ¼ck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sign_in_btn"
        android:layout_alignLeft="@+id/reg_password2_et"
        android:layout_alignStart="@+id/reg_password2_et"
        android:id="@+id/tologin_btn"
        android:onClick="onClick" />

</RelativeLayout>